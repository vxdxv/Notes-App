<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-5 px-5">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class=" breadcrumb list-unstyled">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">Dashboard</a>
                    </li>
                    <li  class="breadcrumb-item active">This is the title</li>
                </ol>
            </nav>
            <div class="col d-flex justify-content-between align-items-center">
                <h1 class='h3'>Add Note</h1>
            </div>
            <form action="/dashboard/add"  method="POST" class="mt-3 position-relative">
                <div class="form-group mb-4 position-absolute" style="left:1px;top:1px;right:1px;">
                    <input  required type="text" name="title" class="form-control border-0 fw-bold fs-4" placeholder="Add a title..." id="title">
                </div>
                <div class="form-group mb-4">
                    <textarea  required name="text"  class="form-control border-0 pt-5 fs-4" placeholder="Take a note..." id="body" rows="12"></textarea>
                </div>
                <div class="position-relative form-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </form>
        </div>

       
    </div>
</div>

