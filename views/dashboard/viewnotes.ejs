<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-5 px-5">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class=" breadcrumb list-unstyled">
                    <li class="breadcrumb-item">
                        <a href="/dashboard">Dashboard</a>
                    </li>
                    <li  class="breadcrumb-item active"><%= note.title%></li>
                </ol>
            </nav>
            <div class="col d-flex justify-content-between align-items-center">
                <h1 class='h3'>View Note</h1>
                <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" id="Delete Button" data-bs-target="#exampleModal">Delete</button>
            </div>
            <!-- <%# %> -->
            <form action="/dashboard/item/<%=noteID%>?_method=PATCH"  method="POST" class="mt-3 position-relative">
                <div class="form-group mb-4 position-absolute" style="left:1px;top:1px;right:1px;">
                    <input type="text" name="title" class="form-control border-0 fw-bold fs-4" value="<%= note.title%>" id="title">
                </div>
                <div class="form-group mb-4">
                    <textarea name="text" class="form-control border-0 pt-5 fs-4" placeholder="Take a note..." id="body" rows="12"><%= note.body%></textarea>
                </div>
                
                <div class="position-relative form-group">
                    <button type="submit" class="btn btn-primary btn-lg" name="update">Update</button>
                </div>
           
               
            </form>
            <form action="/dashboard/item/<%=noteID%>?_method=POST" method="POST">
                <div class="position-relative form-group mt-4">
                    <% const content={title:note.title,body:note.body}%>
                    <button type="submit" class="btn btn-primary btn-lg" name="download" value="<%=JSON.stringify(content)%>" ><i class="fa fa-download"></i> Download as pdf</button>
    
                </div>
            </form>

           
                <div class="position-relative form-group mt-4">
                    <% const content1={title:note.title,body:note.body}%>
                    <a href="/dashboard/ai/<%=noteID%>">
                        <button type="submit" class="btn btn-primary btn-lg" name="enhance_with_ai" value="<%=JSON.stringify(content1)%>" ><i class="fa fa-wand-magic-sparkles"></i> Enhance with Ai</button>
                    </a>
                </div>
         
            

                <div class="position-relative form-group mt-4 d-flex justify-content-end me-5">
                    <a href="/dashboard/new/<%=noteID%>"><button type="submit" class="btn btn-primary btn-lg" name="setColor">Set color</button></a>
                    
                </div>
           
           
        </div>

       
    </div>
</div>

<div class="modal fade"  tabindex="-1" id="exampleModal" >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">You are about to delete a note</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>This will delete your note <b class="fw-bold"><%= note.title%></b><br/>
            Are you sure?
        </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/dashboard/item-delete/<%=noteID%>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Delete Note</button>
        </form>
        </div>
      </div>
    </div>
  </div>